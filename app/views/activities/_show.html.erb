<div class="row shadow">
  <% if @activity.picture.attached? %>
    <%= cl_image_tag(@activity.picture.key, crop: :fill, class: "rounded-3 px-0") %>
  <% else %>
    <img class="rounded-3 px-0" src="https://www.sportdiet.fr/wp-content/uploads/2019/09/male-climber-on-overhanging-rock-against-PRHCNG5.jpg" />
  <% end %>
</div>
<div>
  <% if @activity.user.avatar.attached? %>
    <%# <img style="border-radius:50%; width:30px;" src="http://ergo-logo-gruenberg.de/wp-content/uploads/2014/10/Avatar-placeholder3-945x945.png" alt=""> %>
    <%= cl_image_tag(@activity.user.avatar.key, class: "avatar-large", crop: :fill) %>
  <% else %>
    <%= image_tag 'default_avatar.png', class: "avatar" %>
  <% end %>
</div>
 <%# ----- delete -------%>
<div>
  <% if @activity.user == current_user && @activity.users.count = 1 %>
   <%= link_to "Supprimer l'activité", root_path, class: "text-decoration-none" %>
  <% else %>
    <%= link_to "Supprimer l'activité", activities_path, class: "text-decoration-none" %>
  <% end %>
</div>
 <%# ----- update -------%>
<div>
  <% if @activity.user == current_user && @activity.users.count = 1 %>
     <%= link_to "Mettre à jour l'activité", edit_activity_path, class: "text-decoration-none" %>
   <% else %>
    <%= link_to "Mettre à jour l'activité", activities_path, class: "text-decoration-none" %>
  <% end %>
</div>
 <%# ----- text zone -------%>
<div class="row mt-3">
<h2><%= @activity.title %></h2>
<p class="mb-0"><%= @activity.start_date.strftime("%-d/%-m/%y à %H:%M") %></p>
<p class="mb-0"><%= @activity.address %></p>
<span>
<% if activity.price > 0 %>
  <%= activity.price %>€
<% else %>
  Gratuit
<% end %></span>
<p class="mb-0 text-muted text-justify"><%= @activity.description %></p>
</div>
 <%# ----- participants avatar -------%>
<div class = "participants-container inline-flex justify-content flex-start">
    <%  @activity.users.each do |user| %>
      <div class="row">
        <% if user!=current_user && user.avatar.attached? %>
          <%= cl_image_tag(user.avatar.key, class: "avatar-large", crop: :fill) %>
        <% else %>
          <%= image_tag 'default_avatar.png', class: "avatar-large", crop: :fill %>
        <% end %>
      </div>
    <% end %>
</div>
