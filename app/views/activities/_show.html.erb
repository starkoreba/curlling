<div class="row shadow">
  <% if @activity.picture.attached? %>
    <%= cl_image_tag(@activity.picture.key, crop: :fill, class: "rounded-3 px-0") %>
  <% else %>
    <img class="rounded-3 px-0" src="https://www.sportdiet.fr/wp-content/uploads/2019/09/male-climber-on-overhanging-rock-against-PRHCNG5.jpg" />
  <% end %>
</div>
<div class="py-3">
  <% if @activity.user.avatar.attached? %>
    <%= cl_image_tag(@activity.user.avatar.key, class: "avatar-large", crop: :fill) %>
  <% else %>
    <%= image_tag 'default_avatar.png', class: "avatar" %>
  <% end %>
</div>

