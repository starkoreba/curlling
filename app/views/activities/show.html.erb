<div class="container">
  <%= render "activities/show", activity: @activity %>
  <br>
  <br>
  <div class="row mt-5">
     <% if @activity.user != current_user %>
      <%= simple_form_for [@activity, @new_participation] do |f| %>
        <%= f.button :submit, "I'm in", class: "gradient-btn g-btn-lg" %>
      <% end %>
    <% end %>
  </div>
</div>
 <%# ----- delete -------%>
<div class="links-container d-flex justify-content-between">
  <div class ="row ms-2">
    <% if @activity.user == current_user && @activity.users.count = 1 %>
    <%= link_to "Supprimer l'activité", root_path, class: "text-decoration-none"  %>
    <% else %>
      <%= link_to "Supprimer l'activité", activities_path, class: "d-none" %>
    <% end %>
  </div>
  <%# ----- update -------%>
  <div class ="row me-2">
    <% if @activity.user == current_user && @activity.users.count = 1 %>
      <%= link_to "Mettre à jour l'activité", edit_activity_path, class: "text-decoration-none" %>
    <% else %>
      <%= link_to "Mettre à jour l'activité", activities_path, class: "d-none" %>
    <% end %>
  </div>
</div>
