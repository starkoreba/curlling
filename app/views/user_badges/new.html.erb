<div class="row shadow">
  <% if @activity.picture.attached? %>
    <%= cl_image_tag(@activity.picture.key, crop: :fill, class: "rounded-3 px-0") %>
  <% else %>
    <%= image_tag "default_picture.png", alt: "Default Picture", class="rounded-3 px-0" %>
  <% end %>
</div>
<div>
  <% if @activity.user.avatar.attached? %>
    <%= cl_image_tag(@activity.user.avatar.key, crop: :fill) %>
  <% else %>
    <%= image_tag "default_avatar.png", alt: "Default Avatar", class="border-radius:50%; width:30px" %>
  <% end %>
</div>
<div class="row mt-3">
  <h2><%= @activity.title %></h2>
  <p class="mb-0"><%= @activity.start_date.strftime("%-d/%-m/%y à %H:%M") %></p>
  <p class="mb-0"><%= @activity.address %></p>
  <span>
    <% if activity.price > 0 %>
      <%= activity.price %>€
    <% else %>
      Gratuit
    <% end %>
  </span>
  <p class="mb-0 text-muted text-justify"><%= @activity.description %></p>
</div>

 <!-- =======================
  List START -->

<ul class="badges-container d-inline-flex ">
    <% @activity.participations.each do |participation| %>
      <li class="row flex-start">
        <div>
          <% if participation.user.avatar.attached? %>
            <%= cl_image_tag(@activity.user.avatar.key, crop: :fill) %>
          <% else %>
            <%= image_tag "default_avatar.png", class="border-radius:50%; width:30px", alt: "" %>
          <% end %>
        </div>
        <div class = "row d-inline-flex justify-content space between">
          <% @activity.category.badges.each |badge| do %>
            <li>
              <%=  image_tag badge.icon, class="border-radius:50%; width:30px" %>
            </li>
          <% end %>
        </div>
      </li>
    <% end %>
</ul>
