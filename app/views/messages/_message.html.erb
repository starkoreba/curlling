<div id="message-<%= message.id %>">
  <% if message.user.avatar.attached? == false %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-mes mb-1" %>
  <% else %>
    <%= cl_image_tag(message.user.avatar.key, class: "avatar-mes mb-1", crop: :fill) %>
  <% end %>
  <small>
    <% if message.user == current_user %>
      <strong>Moi</strong>
      <% else %>
      <strong><%= message.user.first_name %></strong>
    <% end %>
    <span><%= local_time(message.created_at, '%H:%M') %></span>
  </small>
  <div class="message mb-3">
  <p class="m-0 p-1"><%= message.content %></p>
  </div>
</div>
