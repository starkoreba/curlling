<div class="container">
  <h1 class="text-center mt-3">Curlling</h1>
  <div class="mt-3">
    <%= render "activities/form_search" %>
  </div>
  <div class="row mt-3">
    <% @activities_cat.each do |activities| %>
    <% unless activities.empty? %>
    <div class="col">
      <h2 class="mt-2"><%= activities.first.category.name %></h2>
    </div>
    <div class="row mt-2 mb-3">
      <% activities.each do |activity| %>
        <div class="col">
          <%= render "activities/activity_card", activity: activity %>
        </div>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
<%# ----- Map -------%>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
