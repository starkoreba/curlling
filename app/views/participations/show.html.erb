
<div class="container">
  <% if @activity.category.name == "Culture" %>
      <div class="card-category-culture" >
        <%= "Culture" %>
      </div>

  <% elsif @activity.category.name == "Sport" %>
  <p>hello </p>
      <div class="card-category-sport" >
        <%= "Sport" %>
      </div>

  <% elsif @activity.category.name == "Jeux de société" %>
      <div class="card-category-games" >
        <%= "Jeux de société" %>
      </div>

  <% elsif @activity.category.name == "Jeux vidéo" %>
      <div class="card-category-videogames" >
        <%= "Jeux vidéo" %>
      </div>

  <% elsif @activity.category.name == "Soirées" %>
      <div class="card-category-parties" >
        <%= "Soirées" %>
      </div>

  <% elsif @activity.category.name == "Activités manuelles" %>
      <div class="card-category-manual-activities" >
        <%= "Activités manuelles" %>
      </div>
      <%= raise %>
  <% end %>



  <div class="container mt-5">
    <div class="row">
      <h1><%= @participation.activity.title %></h1>
    </div>
    <div class="row mt-3">
        <h2><%= @participation.activity.start_date %></h2>
    </div>
    <div class="row">
      <h2><%= @participation.activity.address %></h2>
    </div>
    <div class="row mt-3">
      <p><%= @participation.activity.description %></p>
    </div>
  </div>


  <div class="row">
    <% @activity.users.each do |user| %>
    <div class="avatar-bordered">
      <% if user.avatar.attached? %>
      <%= cl_image_tag(user.avatar.key, width: 150, height: 150, crop: :thumb, crop: :fill) %>
      <% else %>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
      <% end %>
    <% end %>
    </div>
  </div>


  <div class="btn-ghost">
    <%= link_to "Chat", activities_path %>
  </div>

  </div>
