
<% if @activity.category.name == "Culture" %>
    <div class="card-category-culture" >
      <%= Culture %>
    </div>

<% elsif @activity.category.name == "Sport" %>
<p>hello </p>
    <div class="card-category-sport" >
      <%= "Sport" %>
    </div>

<% elsif @participation.activity.category == "jeux de société" %>
    <div class="card-category-games" >
      <%= Jeux de société %>
    </div>

<% elsif @participation.activity.category == "jeux vidéo" %>
    <div class="card-category-videogames" >
      <%= Jeux vidéo %>
    </div>

<% elsif @participation.activity.category == "soirées" %>
    <div class="card-category-parties" >
      <%= Soirées %>
    </div>

<% elsif @participation.activity.category == "activités manuelles" %>
    <div class="card-category-manual-activities" >
      <%= Activitées manuelles %>
    </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <h1><%= @participation.activity.title %></h1>
  </div>
  <div class="row mt-3">
      <h2><%= @participation.activity.start_date %></h2>
  </div>
  <div class="row">
    <h2><%= @participation.activity.address %></h2>
  </div>
  <div class="row mt-3">
    <p><%= @participation.activity.description %></p>
  </div>
</div>


